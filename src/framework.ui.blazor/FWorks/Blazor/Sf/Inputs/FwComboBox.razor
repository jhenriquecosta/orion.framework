@typeparam TItem
@inherits FwBaseComboBox<TItem>
    
        <SfComboBox Placeholder="@Caption"
                    Value="@InternalValue"
                    DataSource="@DataSource"
                    Readonly="@(!AllowEdit)"
                    AllowFiltering="@AllowFiltering"
                    IgnoreAccent="@IgnoreAccent"
                    CssClass="@CssClass"
                    FloatLabelType="@FloatLabel">
            <ComboBoxEvents TValue="int?"
                            ValueChange="OnValueChanged">
            </ComboBoxEvents>
            <ComboBoxFieldSettings Text="@FieldText"
                                   Value="@FieldValue">
            </ComboBoxFieldSettings>
        </SfComboBox>
      
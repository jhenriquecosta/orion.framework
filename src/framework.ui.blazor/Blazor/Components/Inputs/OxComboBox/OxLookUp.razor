@namespace Orion.Framework.Ui.Blazor.Components
@typeparam TValue
@typeparam TEntity
@inherits OxLookUpBase<TEntity, TValue>
<EjsComboBox @ref="objComboEdit"
             Placeholder="@Caption"
             Value="@InternalValue"
             DataSource="@DataSource"
             Readonly="@(!AllowEdit)"
             AllowFiltering="@AllowFiltering"
             IgnoreAccent="@IgnoreAccent"
             CssClass="@CssClass"
             FloatLabelType="@FloatLabel">

    <ComboBoxEvents TValue="int?"
                    ValueChange="OnValueChanged">
    </ComboBoxEvents>
    <ComboBoxFieldSettings Text="@FieldText"
                           Value="@FieldValue">
    </ComboBoxFieldSettings>
</EjsComboBox>

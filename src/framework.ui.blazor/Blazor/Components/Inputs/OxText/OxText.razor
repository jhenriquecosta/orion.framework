@namespace Orion.Framework.Ui.Blazor.Components
@inherits OxTextBase
<EjsTextBox 
            Input="OnValueChanged"
            OnChange="OnValueChanged"
            OnBlur="OnBlurFired"
            Locale="@Locale"
            ShowClearButton="@ShowClearButton"
            @ref="objEditText"
            Readonly="@(!AllowEdit)"
            CssClass="@CssClass"
            @bind-Value="@Value"
            Placeholder="@Caption"
            FloatLabelType="@FloatLabel">
</EjsTextBox>

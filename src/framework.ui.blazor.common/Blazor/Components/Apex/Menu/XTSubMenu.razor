@namespace Framework.Web.Blazor.Components.Apex

<li class="has-sub nav-item">
    <a href="#">
        <i class="@Icon"></i>
        <span data-i18n="" class="menu-title">@Caption</span>
    </a>

    <ul class="menu-content">
        @if (MenuTemplate != null)
        {
            @MenuTemplate
        }
        else
        {
            foreach (var item in MenuItems)
            {
                if (item.IsVisible)
                {
                    <XTMenuItem MenuItem="@item" IsEnabled="@item.IsEnabled" />
                }
            }
        }

    </ul>
</li>


@code
{
    [Parameter] public string Caption { get; set; }
    [Parameter] public string Icon { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public RenderFragment HeaderTemplate { get; set; }
    [Parameter] public RenderFragment MenuTemplate { get; set; }
    [Parameter] public string Css { get; set; }
    [Parameter] public bool IsEnabled { get; set; } = true;
    [Parameter] public IEnumerable<MenuElement> MenuItems { get; set; } = new List<MenuElement>();

}
